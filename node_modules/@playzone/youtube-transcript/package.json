{
  "name": "@playzone/youtube-transcript",
  "version": "1.0.0",
  "description": "A JavaScript API which allows you to get the transcripts/subtitles for a given YouTube video. It also works for automatically generated subtitles and it does not require a headless browser.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && cp youtube-transcript-api-js/cli.js dist/",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint youtube-transcript-api-js/**/*.ts",
    "lint:fix": "eslint youtube-transcript-api-js/**/*.ts --fix",
    "format": "prettier --write youtube-transcript-api-js/**/*.ts",
    "cli": "node dist/cli.js",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "youtube-transcript-api": "./dist/cli.js"
  },
  "keywords": [
    "youtube",
    "transcript",
    "subtitle",
    "subtitles",
    "api",
    "javascript",
    "typescript",
    "cli",
    "auto-generated",
    "translation",
    "srt",
    "webvtt",
    "json"
  ],
  "author": "Pavan Reddy",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/playzone/youtube-transcript-api-js.git"
  },
  "homepage": "https://github.com/playzone/youtube-transcript-api-js#readme",
  "bugs": {
    "url": "https://github.com/playzone/youtube-transcript-api-js/issues"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "html-entities": "^2.6.0",
    "http-proxy-agent": "^7.0.2",
    "https-proxy-agent": "^7.0.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
