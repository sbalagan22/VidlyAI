{
    "manifest_version": 3,
    "name": "VidlyAI",
    "version": "1.0",
    "description": "AI companion for YouTube.",
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://www.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "vidly-ai.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_page": "options.html",
    "action": {
        "default_title": "Configure VidlyAI"
    }
}